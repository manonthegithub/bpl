{
  "$schema": "http://bookpleasure.ru",
  "id": "http://bookpleasure.ru",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format":"uuid"
    },
    "category": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "imageLink": {
      "type": "string"
    },
    "quantity": {
      "type": "integer"
    },
    "price": {
      "type": "integer"
    },
    "enabled": {
      "type": "boolean"
    },
    "active": {
      "default": true,
      "type": "boolean"
    },
    "base64ImageFile":{
      "type": "string"
    }
  },
  "required": [
    "price",
    "category",
    "name",
    "quantity"
  ]
}